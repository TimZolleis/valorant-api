generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  puuid            String                   @id
  gameName         String
  tagLine          String
  region           String
  reauthentication ReauthenticationCookies?
  Offers           Offers[]
  reminders        Reminder[]
  reminder_email   String?
}

model ReauthenticationCookies {
  puuid String @id
  user  User   @relation(fields: [puuid], references: [puuid])
  sub   String @db.VarChar(2000)
  ssid  String @db.VarChar(2000)
  clid  String @db.VarChar(2000)
  csid  String @db.VarChar(2000)
}

model Offers {
  puuid      String
  user       User      @relation(fields: [puuid], references: [puuid])
  date       Float
  offerId    String
  itemTypeId String
  type       OfferType

  @@id([puuid, date, offerId])
  @@unique([puuid, date, offerId], name: "uniqueDailyOffer")
}

enum OfferType {
  DAILY
  FEATURED
  BONUS
}

model Reminder {
  id             String  @id @default(uuid())
  offerId        String  @unique
  name           String
  expirationDate String?
  users          User[]
  createdAt      String
}

model Cache {
  key   String @id @unique
  value Json
}

model MatchAnalysisSchedule {
  matchId        String         @id
  matchStartTime DateTime
  status         AnalysisStatus
}

enum AnalysisStatus {
  QUEUED
  COMPLETE
}

model MatchPerformance {
  puuid                    String
  matchId                  String
  rankedRatingBeforeUpdate Int
  rankedRatingAfterUpdate  Int
  tierBeforeUpdate         Int
  tierAfterUpdate          Int

  kills         Int
  deaths        Int
  assists       Int
  roundsPlayed  Int
  score         Int
  totalShots    Int
  headShots     Int
  bodyShots     Int
  legShots      Int
  characterUuid String
  teamId        String

  @@id([puuid, matchId])
}

model PlayerWeaponStats {
  puuid      String
  weaponId   String
  kills      Int
  totalShots Int
  headShots  Int
  bodyShots  Int

  @@id([puuid, weaponId])
}
