generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  puuid            String                   @id
  gameName         String
  tagLine          String
  region           String
  reauthentication ReauthenticationCookies?
  Offers           Offers[]
  reminders        Reminder[]
  reminder_email   String?
}

model ReauthenticationCookies {
  puuid String @id
  user  User   @relation(fields: [puuid], references: [puuid])
  sub   String @db.VarChar(2000)
  ssid  String @db.VarChar(2000)
  clid  String @db.VarChar(2000)
  csid  String @db.VarChar(2000)
}

model Offers {
  id      String    @id @default(uuid())
  puuid   String
  user    User      @relation(fields: [puuid], references: [puuid])
  date    DateTime  @default(now())
  offerId String
  itemTypeId String
  type    OfferType

  @@unique([puuid, date, offerId], name: "uniqueDailyOffer")
}

enum OfferType {
  DAILY
  FEATURED
  BONUS
}

model Skin {
  id          String @id
  displayName String
  imageUrl    String
}

model Reminder {
  id             String  @id @default(uuid())
  offerId        String  @unique
  name           String
  expirationDate String?
  users          User[]
  createdAt      String
}

model ReminderEmail {
  id String @id
}

model Cache {
  key   String @id @unique
  value Json
}

model MatchAnalysisSchedule {
  matchId String @id
  puuid   String
}

model PlayerGameStats {
  puuid         String
  matchId       String
  kills         Int
  deaths        Int
  assists       Int
  currentRank   Int
  roundsPlayed  Int
  score         Int
  totalShots    Int
  headShots     Int
  bodyShots     Int
  legShots      Int
  characterUuid String
  teamId        String

  @@id([puuid, matchId])
}

model PlayerWeaponStats {
  puuid      String
  weaponId   String
  kills      Int
  totalShots Int
  headShots  Int
  bodyShots  Int

  @@id([puuid, weaponId])
}

